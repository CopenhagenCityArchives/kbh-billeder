extends index

append header
  title Søg

block content
  section(role='main', ng-controller='searchController')
    h1.page-header.sr-only Søgeresultat
    div(class='search-results', data-infinite-scroll='search.nextPage()')#masonry-container
      div(ng-repeat='result in search.results', class='col-xs-12 col-sm-6 col-md-4 col-lg-3', data-update-masonry-container)
          a(href='{{result.url}}', class='thumbnail')
            img(src='{{result.thumbnail_url}}', alt='{{result.title}}')
            h2.h4 {{result.title}}
            p.description {{result.description}}
            p.small {{result.colophon}}

  .clearfix



