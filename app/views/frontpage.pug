extends frontpage
include mixins/meta
include mixins/search-freetext-form

append header
  +meta()

block content-top
  .jumbo
    .jumbo__image
    .jumbo__logos
      +icon('kbh-museum')
      +icon('kbh-arkiv')
    .jumbo__flex
      .container-fluid
        .row
          .col-xs-12.col-sm-8.col-md-6
            .jumbo__teaser
              include includes/tagline
    .jumbo__search
      .container-fluid
        +searchFreetextForm('Søg på kbhbilleder.dk', 'on-white', 'large')

append javascript
  - baseURL = 'http://' + (req.get('x-forwarded-host') || req.get('host')) + '/'
  script(type="application/ld+json").
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "url": "#{baseURL}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "#{baseURL}?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
