.box
  a(href='#{asset.link}')
    if asset.type == 'video'
      .video-thumbnail
        .icon
    else
      .image
        .overlay
          img(src='#{asset.thumbnailURL}').rotation
          if asset.type == 'image-rotation'
            +icon('rotation')
    h2.h4 #{asset.title}
    p.description #{asset.description}
