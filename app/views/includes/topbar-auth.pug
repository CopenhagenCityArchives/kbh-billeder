include ../mixins/icon

.topbar__auth.hidden-xs.hidden-sm
  if user
    .dropdown
      a.dropdown__selected.topbar__items-link.topbar__name
        = (user.name.givenName || user.nickname)
      .dropdown__options
        a.dropdown__option(href='/logout') Log ud
  else
    a.topbar__items-link(data-action='login') Log ind
