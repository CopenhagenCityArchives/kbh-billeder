extends ./player-controls

block document__player-controls
  - const isDownloadable = helpers.isDownloadable(metadata);
  - const hasBacksideAsset = helpers.hasBacksideAsset(metadata);
  - const getZoomTilesId = helpers.getZoomTilesId(metadata);

  if getZoomTilesId
    a(data-action='toggle-tiled-zoom').hidden-xs.hidden-sm.zoom-btn
      +icon('zoom-in', 'zoom-in')
      span.zoom-in Zoom

  else
    button(data-action='toggle-expandable').hidden-xs.hidden-sm.zoom-btn.btn.btn-transparent.btn-no-shadow
      +icon('zoom-in', 'zoom-in')
      +icon('zoom-out', 'zoom-out')
      span.zoom-in Forstør
      span.zoom-out Formindsk

  button(data-action="download:show-overlay", class= isDownloadable ? '' : 'dimmed' class='document__player-controls__actions btn btn-transparent btn-no-shadow')
    +icon('download')
    span Download

  if hasBacksideAsset
    button.document__player-controls__rotate(onclick="javascript:flipAsset()").btn.btn-transparent.btn-no-shadow
      +icon('clockwise')
      span.document__player-controls__rotate--item.document__player-controls__rotate--backside.document__player-controls__rotate--item--active
        | Se bagside
      span.document__player-controls__rotate--item.document__player-controls__rotate--front
        | Se forside

  div.document__player-controls--social-share
    a(href="javascript:fbshareCurrentPage()", target="_blank", title="Del på Facebook", aria-label="Del på Facebook")
      +icon('facebook')
    a(href="javascript:twittershareCurrentPage()", target="_blank", title="Del på Twitter", aria-label="Del på Twitter")
      +icon('twitter')
    a(href="javascript:pinterestshareCurrentPage()", target="_blank", title="Del på Pinterest", aria-label="Del på Pinterest")
      +icon('pinterest')
