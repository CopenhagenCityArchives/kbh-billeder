header.topbar
  .container-fluid
    nav
      .topbar-items
        #heading-categories-menu.hamburger.hidden-lg.hidden-md
          span.sr-only Menu
          +icon('menu')
        span.hidden-sm.hidden-xs
          if menus && menus.main
            each item in menus.main
              a(href=item.url).topbar-items__link= item.title
        - var path = (req.path).split('/')
        - var searchMethod = (isSearching ? 'modify-query' : '')
        if !frontpage
          form.search-box(method='get', action='/', data-method=searchMethod)
            .input-group
              input.form-control.input-search(
                type='text',
                id='search-input',
                placeholder='Søg på kbh-billeder.dk',
                name='q',
                autocomplete="off",
                value=req.query.q || '')
              .input-group-btn
                button.btn-search.btn
                  span.sr-only Søg
                  +icon('search')
