footer
  .container-fluid
    .row
      .col-xs-12.col-sm-7.col-lg-8.footer__menu
        if menus && menus.footer
          each item in menus.footer
            a.footer__element(href=item.url)= item.title

      .col-xs-12.col-sm-5.col-lg-4.footer__flex
        .footer__address
          | Historie &amp; Kunst
          br
          | KØBENHAVNS KOMMUNE
          br
          | Kultur- og Fritidsforvaltningen
          br
          | Vesterbrogade 59
          br
          | 1620 København V
        .footer__logo
          +icon('logo')
