img(src=player.thumbnailUrl,
alt=player.title,
data-action='toggle-expandable').asset__image

each backsides in player.backsides
  if backsides.length > 0
    each backside in backsides
      img(src=helpers.getThumbnailURL(backside),
      alt=player.title,
      data-action='toggle-expandable').asset__image--hide.asset__image--backside
