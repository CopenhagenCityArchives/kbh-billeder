include icon

mixin searchResultAsset(asset)
  - var sidebar = config.features.filterSidebar
  - var boxCol = sidebar ? 'col-xs-6 col-md-4' : ' col-xs-6 col-md-4 col-lg-3'
  .box(class=boxCol)
    a(href='#{asset.link}')
      if asset.type == 'video'
        .video-thumbnail
          .icon
      else
        .image
          .overlay.square-container
            img(src='#{asset.thumbnailURL}').rotation.object-fit
            if asset.type == 'image-rotation'
              +icon('rotation')
      .box__meta
        h2.h4 #{asset.title}
        p.description #{asset.description}
