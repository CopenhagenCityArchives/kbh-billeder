extends index

block content
  div(itemscope, itemtype='http://schema.org/CreativeWork', class='asset')
      - var title = item.short_title || 'Ingen titel'
      .row.bleed
        span(data-picture, data-alt=title)

          span(data-src=image_src_set['400'], data-media='(max-width: 400px)')
          span(data-src=image_src_set['800'], data-media='(min-width: 400px)')
          span(data-src=image_src_set['1200'], data-media='(min-width: 800px)')

          noscript
            img(src=image_src, alt=title, title=title)

      .row
        h1(itemprop='name')= title

      - if(item.description)
        .row
          h2.sr-only Beskrivelse
          p(itemprop='description',
            class='lead')= item.description

          table(class='table table-striped')
            tbody
              tr
                th Rettighedshaver
                td(itemprop='copyrightHolder')= item.copyright || '-'
              tr
                th Fotograf
                td(itemprop='creator')= item.creator || '-'
              tr
                th Licens
                td
                  - if(item.license)
                    - var license = helpers.license_tag(item.license.id);
                    - if(license)
                      a(href=license.url, rel='license', target='_blank')
                        img(src=license.img, alt='Creative Commons licens')
                    - else
                      | #{item.license.displaystring}
                  - else
                    | -

      .row
        h2 Tid
        table(class='table table-striped')
          tbody
            tr
              th Årstal:
              td= item.year || '-'
            tr
              th Optagelsestid - Fra:
              td(itemprop='dateCreated', class='date')
                - var date = item.acceptance_time_from;
                - if(!date)
                  | -
                - else
                  | #{date.day}/#{date.month}/#{date.year}
            tr
              th Optagelsestid - Til:
              td(class='date')
                - var date = item.acceptance_time_to;
                - if(!date)
                  | -
                - else
                  | #{date.day}/#{date.month}/#{date.year}
            tr
              th Tidsnote:
              td= item.timenote || '-'

      
      .row
        h2 Sted
        - var has_coordinates = item.longitude && item.latitude;
        //- div(class=has_coordinates ? 'col-md-8 nopadding' : '')
        table(class='table table-striped')
          tbody
            tr
              th Sted:
              td= item.place || '-'
            tr
              th Koordinater:
              td= has_coordinates ? item.longitude.toFixed(5) + ',' + item.latitude.toFixed(5) : '-'
            tr
              th By:
              td= item.city || '-'
            tr
              th Topnr.:
              td= item.topno || '-'
            tr
              th Lokalitetsnote:
              td= item.locationnote || '-'

        - if(has_coordinates)
          //- .col-md-4(style="text-align: center")
          div
            a(href='http://maps.google.dk/maps?ll=' +
                   item.longitude + ',' + item.latitude +
                   '&spn=0.008039,0.015857&t=h&z=16',
                    target='blank')
              img(alt='Google Map',
                  src='http://maps.google.dk/maps/api/staticmap?size=200x150&markers=' +
                      item.longitude + ',' + item.latitude +
                      '&sensor=false&scale=1&zoom=14&maptype=terrain')
      .row
        h2 Tekniske oplysninger
        table(class='table table-striped')
          tbody
            tr
              th Bredde (pixel):
              td= item.img_width.toFixed(3) || '-'
            tr
              th Højde (pixel):
              td= item.img_height.toFixed(3) || '-'
            tr
              th Opløsning (DPI):
              td= item.dpi || '-'
            tr
              th Fil-ID:
              td= id || '-'



