header.topbar(class=frontpage ? 'frontpage' : '')
  .container-fluid
    nav
      .topbar-items
        a.logo-wrap(href='/', class=frontpage ? 'hidden-md hidden-lg' : '')
          .logo
            +icon('logo')
          .logo-text.hidden-xs
            span Nationalmuseets
            span Samlinger Online
        - var path = (req.path).split('/')
        form.search-box(method='get', action='/')
          .input-group
            input.form-control(
              type='text',
              id='search-input',
              placeholder='Søg på samlinger.natmus.dk',
              name='q',
              autocomplete="off",
              value=req.query.q || '')
            span.input-group-btn
              button.btn-search.btn.btn-primary
                span.sr-only Søg
                +icon('search')
        a(href='#')#heading-categories-menu.hamburger
          span.sr-only Kataloger og kategorier
          +icon('menu')
      .logo-wrap.big-wrap.hidden-sm.hidden-xs
        .logo
          +icon('logo')
        .logo-text
          h1 Nationalmuseets Samlinger Online
          .tag-line Udforsk 53.682 billeder og billeder af ting fra Nationalmuseets arkiver
