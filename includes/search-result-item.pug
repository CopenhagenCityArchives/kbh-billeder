include ../mixins/icon

- var href = '/' + metadata.collection;
- if(Object.keys(config.types).length > 1) {
-   href += '/' + metadata.type;
- }
- href += '/' + metadata.id;
- var player = helpers.determinePlayer(metadata);


a(href=href).search-result-item.col-xs-6.col-sm-4
  .search-result-item__squared-container
    img(src=href + '/thumbnail').search-result-item__squared-image.object-fit
    if player === 'rotation'
      +icon('rotation')
    if player === 'video'
      .search-result-item__overlay
        +icon('play')
  h2.search-result-item__title= helpers.documentTitle(metadata)
  p.search-result-item__description= helpers.documentDescription(metadata)
