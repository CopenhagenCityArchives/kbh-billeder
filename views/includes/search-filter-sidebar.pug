include ../mixins/icon
include ../mixins/search-filter-section.jade

.search-filter-sidebar
  h2.search-filter-sidebar__heading Valgte filtre
  .search-filter-sidebar__filters
    if filterCount > 0
      for values, field in filters
        for value in values
          button.btn.btn-primary.btn-filter.btn-close(data-field=field,data-value=value,data-action='remove-filter')= value
            +icon('close')
    else
      p.filter-text Ingen filtre valgt — tryk på knapperne nedenunder for at filtrere dit søgeresultat.

  if aggregations
    .search-filter-sidebar__options
      +filterSection('bydele', 'district')
      +filterSection('vejnavne', 'street_name')
