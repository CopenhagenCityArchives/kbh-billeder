each docs, type in metadata.related
  - const restrictRelated = config.types[metadata.type].layout.restrictRelated;
  - const show = !restrictRelated || restrictRelated.indexOf(type) !== -1;
  if show && docs.length > 0
    .col-xs-12
      h2= 'Relaterede ' + helpers.translate(type)
      .related-assets
        .related-assets__next-arrow
          +icon('chevron-right')
        .related-assets__prev-arrow
          +icon('chevron-right')
        .slider
          each doc in docs
            a(href=helpers.getDocumentURL(doc))
              img(data-lazy=helpers.getThumbnailURL(doc))
