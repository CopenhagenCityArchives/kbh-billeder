include icon

mixin searchResultAsset(asset)
  a(href='#{asset.link}').box.col-xs-6.col-sm-4.col-lg-3
    if asset.type == 'video'
      .video-thumbnail
        .icon
    else
      .image
        .overlay
          img(src='#{asset.thumbnailURL}').rotation
          if asset.type == 'image-rotation'
            +icon('rotation')
    h2.h4 #{asset.title}
    p.description #{asset.description}
